<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EmptyView">
        <item name="emptyview_titleTextView">@style/EmptyView.TitleTextView</item>
        <item name="emptyview_messageTextView">@style/EmptyView.MessageTextView</item>
        <item name="emptyview_button">@style/EmptyView.Button</item>
    </style>

    <style name="EmptyView.TitleTextView" parent="android:Widget.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:padding">@dimen/com_levibostian_emptyview_view_padding</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EmptyView.MessageTextView" parent="android:Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:padding">@dimen/com_levibostian_emptyview_view_padding</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EmptyView.Button" parent="android:Widget.Button">
    </style>
</resources>